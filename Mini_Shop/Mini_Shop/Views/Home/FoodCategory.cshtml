@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="categories" class="my-5 overflow-hidden">
    <div class="container pb-5">
        <div class="section-header d-md-flex justify-content-between align-items-center mb-3">
            <h2 class="display-3 fw-normal">Pet's Food</h2>
        </div>

        <div class="row">
            <!-- Category 1 -->
            <div class="col-md-3">
                <div class="card position-relative">
                    <div style="position: relative; padding-top: 75%; overflow: hidden; border-radius: 15px;">
                        <img src="~/Content/images/PetsFood.png"
                             style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: contain; border-radius: 15px;"
                             alt="Pet Food">
                    </div>
                    <div class="card-body text-center">
                        <h3 class="card-title pt-4 m-0">Royal Canin</h3>
                        <div class="d-flex justify-content-center mt-3 gap-2">
                            <form action="@Url.Action("AddToCart", "Home")" method="post">
                                <input type="hidden" name="ProductId" value="1" />
                                <input type="hidden" name="Quantity" value="1" />
                                <button type="submit" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1">
                                    Add To Cart
                                </button>
                            </form>
                            <a href="@Url.Action("ReadMore", "Home", new { id = 1 })" class="btn btn-outline-secondary btn-lg text-uppercase fs-6 rounded-1">
                                Read More
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Repeat for other products, updating the `id` parameter -->
