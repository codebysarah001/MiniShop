@model Mini_Shop.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <h2>Product not found</h2>
}
else
{
    <section>
        <div class="container my-5">
            <div class="row">
                <!-- Image -->
                <div class="col-md-4">
                    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.ProductName" class="img-fluid">
                </div>
                <!-- Product Details -->
                <div class="col-md-8">
                    <h3>@Model.ProductName</h3>
                    <p><strong>Category:</strong> @Model.Category.CategoryName</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Price:</strong> $@Model.Price</p>
                    <form action="@Url.Action("AddToCart", "Home")" method="post">
                        <input type="hidden" name="ProductId" value="@Model.ProductID" />
                        <input type="hidden" name="Quantity" value="1" />
                        <button type="submit" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1">
                            Add To Cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
}
