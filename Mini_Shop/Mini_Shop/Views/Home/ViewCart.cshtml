@model IEnumerable<Mini_Shop.Models.Cart>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2 style="text-align:center">Your Shopping Cart</h2>
<br />
<br />
<br />
<hr />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageURL))
                    {
                        <img src="@Url.Content(item.ImageURL)" alt="@item.ProductName" style="width: 100px; height: auto;">
                    }
                    else
                    {
                        <img src="~/Content/images/default.png" alt="Default Image" style="width: 100px; height: auto;">
                    }
                </td>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>
                    @{
                        // Ensure the Price conversion is valid
                        decimal price;
                        bool isPriceValid = decimal.TryParse(item.Price, out price);
                        decimal total = isPriceValid ? (price * item.Quantity.GetValueOrDefault()) : 0;
                    }
                    @(total.ToString("C")) <!-- Display total in currency format -->
                </td>
                <td>
                    @using (Html.BeginForm("RemoveProduct", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("productId", item.ProductID)
                        <button type="submit" class="btn btn-danger">Remove</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

<p style="text-align:center">
    @Html.ActionLink("Continue Shopping", "Checkout", "Home", new { }, new { @class = "btn btn-primary" })
</p>