@{
    ViewBag.Title = "Contact";
}
<main aria-labelledby="title" style="padding: 40px; max-width: 800px; margin: 0 auto; font-family: Arial, sans-serif;">
    <h2 id="title" style="font-size: 2.5rem; font-weight: bold; color: #333;">@ViewBag.Title</h2>
    <p style="font-size: 1rem; color: #555; margin-bottom: 30px;">Please fill out the form below, and we will get back to you as soon as possible.</p>

    @if (ViewBag.Message != null)
    {
        <div style="background-color: #d4edda; color: #155724; padding: 15px; margin-bottom: 20px; border: 1px solid #c3e6cb; border-radius: 5px;">
            @ViewBag.Message
        </div>
    }

    <form action="@Url.Action("Submit", "Home")" method="post" style="display: grid; grid-gap: 20px;">
        <div>
            <label for="name" style="font-weight: bold; color: #333;">Name</label>
            <input type="text" id="name" name="name" required
                   style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px;">
        </div>

        <div>
            <label for="email" style="font-weight: bold; color: #333;">Email</label>
            <input type="email" id="email" name="email" required
                   style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px;">
        </div>

        <div>
            <label for="subject" style="font-weight: bold; color: #333;">Subject</label>
            <input type="text" id="subject" name="subject" required
                   style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px;">
        </div>

        <div>
            <label for="message" style="font-weight: bold; color: #333;">Message</label>
            <textarea id="message" name="message" rows="5" required
                      style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px; resize: none;"></textarea>
        </div>

        <button type="submit" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1">
            Send Message
        </button>
    </form>
</main>
